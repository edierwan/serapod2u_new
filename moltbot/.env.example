# Moltbot Environment Configuration
# Copy this file to .env and fill in your values

# ========== Server ==========
PORT=4000
MOLTBOT_WEBHOOK_SECRET=your-webhook-secret-here
MOLTBOT_DEBUG_SECRET=your-debug-secret-here

# ========== Gateway (Baileys) ==========
BAILEYS_GATEWAY_URL=https://wa.serapod2u.com
SERAPOD_WA_API_KEY=your-gateway-api-key

# ========== LLM Provider ==========
# Choose: openai or gemini
LLM_PROVIDER=openai

# OpenAI (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Gemini (required if LLM_PROVIDER=gemini)
# GEMINI_API_KEY=your-gemini-key
# GEMINI_MODEL=gemini-1.5-flash

# LLM Settings
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# ========== Serapod API ==========
SERAPOD_BASE_URL=https://dev.serapod2u.com
SERAPOD_SERVICE_TOKEN=your-agent-api-key
SERAPOD_TENANT_ID=default
SERAPOD_TIMEOUT=10000

# ========== Memory ==========
MEMORY_MAX_TURNS=10
MEMORY_TTL_MS=604800000

# ========== Supabase (for direct DB writes) ==========
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========== Features ==========
MOLTBOT_AUTO_REPLY=true
MOLTBOT_TOOL_CALLING=true
MOLTBOT_GREETING=true
MOLTBOT_DB_WRITES=true

# ========== Admin Detection ==========
# Comma-separated phone numbers that are considered admin
# These numbers can use /ai commands from WhatsApp
ADMIN_WA_NUMBERS=60192277233

# ========== Safety Mode ==========
# When true, only read-only tools are enabled (lookup, points, orders)
# When false, write tools like mark_ticket_resolved are also available
BOT_SAFE_MODE=true

# ========== Takeover Settings ==========
# Auto-revert to AUTO mode after this many ms (default: 30 min)
TAKEOVER_AUTO_REVERT_MS=1800000

# ========== Bot Personality ==========
BOT_NAME=Serapod Bot
BOT_LANGUAGE=ms

# ========== Logging ==========
LOG_LEVEL=info
