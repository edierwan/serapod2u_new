{
  "name": "baileys-gateway",
  "version": "1.0.0",
  "description": "Self-hosted WhatsApp Gateway using Baileys for Serapod2u",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "pm2:start": "pm2 start dist/index.js --name baileys-gateway",
    "pm2:restart": "pm2 restart baileys-gateway",
    "pm2:stop": "pm2 stop baileys-gateway",
    "pm2:logs": "pm2 logs baileys-gateway"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "pino": "^9.4.0",
    "qrcode": "^1.5.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}