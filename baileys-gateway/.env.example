# Baileys Gateway Environment Configuration
# Copy this to .env and fill in the values

# Server Configuration
PORT=3001
HOST=0.0.0.0

# API Security
# Generate a secure key: openssl rand -hex 32
API_KEY=your-secure-api-key-here

# Session/Auth Storage Path
AUTH_PATH=./auth

# Allowed Origins (comma-separated for CORS)
# Example: https://app.serapod2u.com,https://admin.serapod2u.com
ALLOWED_ORIGINS=*

# Log Level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# QR Code expiration in seconds
QR_EXPIRY_SECONDS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
